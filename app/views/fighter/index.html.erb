<div class="container">
  <h1>Secret Dinosaur Fighter!</h1>
  <div class="console">
    <div class="player one">
      <div class="infobar"><span class="name"></span> (<span class="hp"></span>) <span class="number">Player 1</span></div>
      <div class="p1health">
        <div class="bar">
          <div class="meter-full"></div>
        </div>
      </div>
      <div class="side"><img src="/assets/sprites/fighter/unknown.gif" class="p1sprite" width="84" height="96"></div>
      <div class="controls p1">
        <div class="dpad">
          <button class="btn upback block topleft">&nbsp;</button>
          <button class="btn up block"><img src="/assets/sprites/fighter/d-up.gif"></button>
          <button class="btn upforward block topright">&nbsp;</button>
          <button class="btn block"><img src="/assets/sprites/fighter/d-left.gif"></button>
          <button class="btn command block">o</button>
          <button class="btn forward block"><img src="/assets/sprites/fighter/d-right.gif"></button>
          <button class="btn downback block bottomleft">&nbsp;</button>
          <button class="btn down block"><img src="/assets/sprites/fighter/d-down.gif"></button>
          <button class="btn downforward block bottomright">&nbsp;</button>
        </div>
        <div class="buttons">
          <button class="a btn btn-success circ">a</button>
          <button class="b btn btn-warning circ">b</button>
          <button class="c btn btn-danger circ">c</button>
        </div>
      </div>
      <div class="action p1"></div>
    </div>
    <div class="player two">
      <div class="infobar"><span class="number">Player 2</span> (<span class="hp"></span>) <span class="name"></span></div>
      <div class="p2health">
        <div class="bar">
          <div class="meter-full p2"></div>
        </div>
      </div>
      <div class="side"><img src="/assets/sprites/fighter/unknown.gif" class="p2sprite" width="84" height="96"></div>
      <div class="controls p2">
        <div class="dpad">
          <button class="btn upforward block topleft">&nbsp;</button>
          <button class="btn up block"><img src="/assets/sprites/fighter/d-up.gif"></button>
          <button class="btn backforward block topright">&nbsp;</button>
          <button class="btn block"><img src="/assets/sprites/fighter/d-left.gif"></button>
          <button class="btn command block">o</button>
          <button class="btn block"><img src="/assets/sprites/fighter/d-right.gif"></button>
          <button class="btn downforward block bottomleft">&nbsp;</button>
          <button class="btn down block"><img src="/assets/sprites/fighter/d-down.gif"></button>
          <button class="btn downback block bottomright">&nbsp;</button>
        </div>
        <div class="buttons">
          <button class="a btn btn-success circ">a</button>
          <button class="b btn btn-warning circ">b</button>
          <button class="c btn btn-danger circ">c</button>
        </div>
      </div>
      <div class="action p2"></div>
    </div>
    <div id="start">
      <button id="play" class="btn btn-large btn-info">Play</button>
    </div>
  </div>
</div>

<div id="koModal" class="modal hide fade" tabindex="-1" role="dialog">
  <div class="ko"></div>
</div>
